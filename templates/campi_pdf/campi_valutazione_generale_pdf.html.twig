<div class="container-fluid text-center">
	<table class="col-sm-12">
		<thead class="cf"></thead>
		<tbody>
			<tr>
				<th>
					Operatore
				</th>
				<td>
					{{ valutazione_generale.operatore.name }}
					{{valutazione_generale.operatore.surname}}
				</td>
			</tr>
			<tr>
				<th>
					Data Valutazione
				</th>
			
				<td>
					{{ valutazione_generale.dataValutazione ? valutazione_generale.dataValutazione|date('Y-m-d') : '' }}
				</td>
			</tr>
			<tr>
				<th>
					Tipologia Valutazione
				</th>
			
				<td>
					{{ valutazione_generale.tipologiaValutazione }}
				</td>
			</tr>
			<tr>
				<th>
					N° componenti nucleo abitativo
				</th>
			
				<td>
					{{ valutazione_generale.nComponentiNucleoAbitativo }}
				</td>
			</tr>
			<tr>
				<th>
					Presenza Assistente Non Famigliare
				</th>
			
				<td>
					{{ valutazione_generale.panf }}
				</td>
			</tr>
			<tr>
				<th>
					Frequenza Assistente Non Famigliare

				</th>
			
				<td>
					{{ valutazione_generale.fanf }}
				</td>
			</tr>
			<tr>
				<th>
					Indicatore Supporto Sociale
				</th>
			
				<td>
					{{ valutazione_generale.iss }}
				</td>
			</tr>
			<tr>
				<th>
					Rischio Infettivo
				</th>
			
				<td>
					{{ valutazione_generale.rischioInfettivo ? 'Si' : 'No' }}
				</td>
			</tr>
			<tr>
				<th>
					Uso Servizi Igenici
				</th>
			
				<td>
					{{ valutazione_generale.usoServiziIgenici }}
				</td>
			</tr>
			<tr>
				<th>
					Abbigliamento
				</th>
				<td>
					{{ valutazione_generale.abbigliamento }}
				</td>
			</tr>
			<tr>
				<th>
					Alimentazione
				</th>
			
				<td>
					{{ valutazione_generale.alimentazione }}
				</td>
			</tr>
			<tr>
				<th>
					Indicatore Deambulazione
				</th>
			
				<td>
					{{ valutazione_generale.indicatoreDeambulazione }}
				</td>
			</tr>
			<tr>
				<th>
					Igiene Personale
				</th>
			
				<td>
					{{ valutazione_generale.igenePersonale }}
				</td>
			</tr>
			<tr>
				<th>
					Cognitività
				</th>
			
				<td>
					{{ valutazione_generale.cognitivita }}
				</td>
			</tr>
			<tr>
				<th>
					Comportamento
				</th>
			
				<td>
					{{ valutazione_generale.comportamento }}</td>
			</tr>
			<tr>
				<th>
					Bisogni
				</th>
			
				<td>

					{% if bisogni is empty %}
						
							Nessun bisogno
					{% else %}
						<ul>
						{% for i in 0..bisogni|length-1 %}
							<li>{{ bisogni[i] }}</li>
						{% endfor %}
						</ul>
					{% endif %}

				</td>
			</tr>
			<tr>
				<th>
					Altre Tipologie Di Assistenza
				</th>
			
				<td>

					{% if altra_tipologia_assistenza is empty %}
						
							Nessuna altra tipologia di assistenza
					{% else %}
						<ul>
						{% for i in 0..altra_tipologia_assistenza|length-1 %}
							<li>{{ altra_tipologia_assistenza[i] }}</li>
						{% endfor %}
						</ul>
					{% endif %}

				</td>
			</tr>
			<tr>
				<th>
					Diagnosi
				</th>
			
				<td>
					{{ valutazione_generale.diagnosi }}
				</td>
			</tr>
		</tbody>
	</table>
</div>
