<div class="container-fluid text-center">
	<table class="col-sm-12">
		<thead class="cf"></thead>
		<tbody>
			<tr>
				<th>
					Operatore
				</th>

				<td>
					{{ valutazione_figura_professionale.operatore.name }}
					{{valutazione_figura_professionale.operatore.surname}}
				</td>
			</tr>
			<tr>
				<th>
					Tipo di Operatore
				</th>

				<td>
					{% if  valutazione_figura_professionale.tipoOperatore == "INF" %}
					Infermiere
					{% elseif  valutazione_figura_professionale.tipoOperatore == "TDR" %}
					Terapista della riabilitazione
					{% elseif  valutazione_figura_professionale.tipoOperatore == "LOG" %}
					Logopedista
					{% elseif  valutazione_figura_professionale.tipoOperatore == "ASA" %}
					Ausiliario socio assistenziale
					{% else %}
					Operatore socio sanitario
					{% endif %}
				</td>
			</tr>
			<tr>
				<th>
					Data di valutazione
				</th>

				<td>
					{{ valutazione_figura_professionale.dataValutazione ? valutazione_figura_professionale.dataValutazione|date('Y-m-d') : '' }}
				</td>
			</tr>
			<tr>
				<th>
					Diagnosi professionale
				</th>

				<td>

					{% if valutazione_figura_professionale.diagnosi is empty %}
						Nessuno
					{% else %}
						<ul>
						{% for i in valutazione_figura_professionale.diagnosi %}
							<li>{{ i.descrizione }}</li>
						{% endfor %}
						</ul>
					{% endif %}

				</td>
			</tr>
			<tr>
				<th>
					Obbiettivi da raggiungere
				</th>

				<td>

					{% if valutazione_figura_professionale.obiettivi is empty %}
						Nessuno
					{% else %}
						<ul>
						{% for i in valutazione_figura_professionale.obiettivi %}
							<li>{{ i.descrizione }}</li>
						{% endfor %}
						</ul>
					{% endif %}

				</td>
			</tr>
			<tr>
				<th>
					Tipo e frequenza
				</th>

				<td>

					{% if  valutazione_figura_professionale.tipoEFrequenza is empty %}
						Nessuno
					{% else %}
						{{ valutazione_figura_professionale.tipoEFrequenza }}
					{% endif %}

				</td>
			</tr>
			<tr>
				<th>
					Modalit√† e tempi di monitoraggio  degli obbiettivi
				</th>

				<td>

					{% if valutazione_figura_professionale.modalitaTempiMonitoraggio is empty %}
						Nessuno
					{% else %}
						{{ valutazione_figura_professionale.modalitaTempiMonitoraggio }}
					{% endif %}

				</td>
			</tr>
		</tbody>
	</table>
</div>
