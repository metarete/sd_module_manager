<div id="visualizza-tables">
    <table class="col-sm-12">
        <thead class="cf">
        <tbody>
        {% if variabileTest != 1%}
            <tr>
                <th>Id</th>
                <td>{{ parere_mmg.id }}</td>
            </tr>
        {% endif %}
            <tr>
                <th>Assistito</th>
                <td>{{parere_mmg.schedaPAI.nomeAssistito}} {{parere_mmg.schedaPAI.cognomeAssistito}}</td>
            </tr>
            <tr>
				<th>Operatore</th>
				<td>{{ parere_mmg.operatore.name }} {{parere_mmg.operatore.surname}}</td>
			</tr>
            <tr>
                <th>Parere</th>
                <td>{{ parere_mmg.parere}}</td>
            </tr>
            <tr>
                <th>Descrizione</th>
                <td>{{ parere_mmg.descrizione }}</td>
            </tr>
            <tr>
				<th>Operazioni</th>
				<td>
					<div class="btn-group" role="group">
						<button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
							Apri
						</button>
						<ul class="dropdown-menu">
							<li>
								<a class="dropdown-item" href="{{ path('app_parere_mmg_edit', {'id': parere_mmg.id}) }}">
									<i class="bi bi-pencil-square"></i>
									Modifica</a>
							</li>
							<li>
								<a class="dropdown-item" href="{{ path('app_parere_mmg_delete', {'id': parere_mmg.id, '_token': csrf_token('delete' ~ parere_mmg.id)}) }}" onclick="return confirm('Sei sicuro di voler cancellare questa scheda?');">
									<i class="bi bi-trash3"></i>Cancella</a>
							</li>
						</ul>
					</div>
				</td>
			</tr>
        </tbody>
    </table>
</div>