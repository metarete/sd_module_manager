<div id="visualizza-tables">
	<table class="col-sm-12">
		<thead class="cf"></thead>
		<tbody>
			{% if variabileTest != 1%}
				<tr>
					<th>Id</th>
					<td>{{ valutazione_figura_professionale.id }}</td>
				</tr>
			{% endif %}
			<tr>
				<th>Assistito</th>
				<td>{{valutazione_figura_professionale.schedaPAI.nomeAssistito}}
					{{valutazione_figura_professionale.schedaPAI.cognomeAssistito}}</td>
			</tr>
			<tr>
				<th>Operatore</th>
				<td>{{ valutazione_figura_professionale.operatore.name }}
					{{valutazione_figura_professionale.operatore.surname}}</td>
			</tr>
			<tr>
				<th>Tipo di operatore</th>
				<td>{{ valutazione_figura_professionale.tipoOperatore }}</td>
			</tr>
			<tr>
				<th>Diagnosi Professionale</th>
				<td>{{ valutazione_figura_professionale.diagnosiProfessionale }}</td>
			</tr>
			<tr>
				<th>Obbiettivi da raggiungere</th>
				<td>{{ valutazione_figura_professionale.obbiettiviDaRaggiungere }}</td>
			</tr>
			<tr>
				<th>Tipo e frequenza</th>
				<td>{{ valutazione_figura_professionale.tipoEFrequenza }}</td>
			</tr>
			<tr>
				<th>Modalit√† e tempi di monitoraggio degli obbiettivi</th>
				<td>{{ valutazione_figura_professionale.modalitaTempiMonitoraggio }}</td>
			</tr>
			<tr>
				<th>Data di valutazione</th>
				<td>{{ valutazione_figura_professionale.dataValutazione ? valutazione_figura_professionale.dataValutazione|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Operazioni</th>
				<td>
					<div class="btn-group" role="group">
						<button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
							Apri
						</button>
						<ul class="dropdown-menu">
							<li>
								<a class="dropdown-item" href="{{ path('app_valutazione_figura_professionale_edit', {'id': valutazione_figura_professionale.id}) }}">
									<i class="bi bi-pencil-square"></i>
									Modifica</a>
							</li>
							<li>
								<a class="dropdown-item" href="{{ path('app_valutazione_figura_professionale_delete', {'id': valutazione_figura_professionale.id, '_token': csrf_token('delete' ~ valutazione_figura_professionale.id)}) }}" onclick="return confirm('Sei sicuro di voler cancellare questa scheda?');">
									<i class="bi bi-trash3"></i>Cancella</a>
							</li>
						</ul>
					</div>
				</td>
			</tr>
		</tbody>
	</table>
</div>
