{% extends 'base.html.twig' %}

{% block title %}Diagnosi
{% endblock %}

{% block body %}
	{% block stylesheets %}
		{{ encore_entry_link_tags('app') }}
		<style>
			body {
				margin: 0;
			}
			.card {
				padding: 0;
				text-align: left;
			}
			.card-text {
				border-bottom-style: solid;
			}
			.card-title {
				border-bottom-style: solid;
				padding-bottom: 8px
			}
		</style>
	{% endblock %}
	<h1><i class="bi bi-puzzle-fill"></i> Diagnosi</h1>
	<div class="container-fluid text-center">
		<div class="row">
			<div class="card">
				<div class="card-body">
					<table class="col-sm-12">
						<thead class="cf"></thead>
						<tbody>
							<tr>
								<th>
									<h5 class="card-text">Id</h5>
								</th>
							</tr>
							<tr></tr>
							<td>
								<p class="card-title">{{ diagnosi.id }}
								</p>
							</td>

							<tr>
								<th>
									<h5 class="card-text">Codice</h5>
								</th>
							</tr>
							<tr></tr>
							<td>
								<p class="card-title">{{ diagnosi.codice }}
								</p>
							</td>
							<tr>
								<th>
									<h5 class="card-text">Descrizione</h5>
								</th>
							</tr>
							<tr></tr>
							<td>
								<p class="card-title">{{ diagnosi.descrizione }}
								</p>
							</td>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	<div class="pb-2 mb-4"></div>

	<a href="{{ path('app_diagnosi_index') }}" type="button" class="btn btn-secondary">
		<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewbox="0 0 16 16">
			<path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
		</svg>
		Torna indietro</a>

	<div class="pb-2 mb-4"></div>
{% endblock %}
