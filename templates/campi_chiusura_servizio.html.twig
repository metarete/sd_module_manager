<div id="visualizza-tables">
    <table class="col-sm-12">
        <thead class="cf">
        <tbody>
        {% if variabileTest != 1%}
            <tr>
                <th>Id</th>
                <td>{{ chiusura_servizio.id }}</td>
            </tr>
        {% endif %}
            <tr>
                <th>Assistito</th>
                <td>{{chiusura_servizio.schedaPAI.nomeAssistito}} {{chiusura_servizio.schedaPAI.cognomeAssistito}}</td>
            </tr>
            <tr>
				<th>Operatore</th>
				<td>{{ chiusura_servizio.operatore.name }} {{chiusura_servizio.operatore.surname}}</td>
			</tr>
            <tr>
                <th>Conclusioni</th>
                <td>{{ chiusura_servizio.conclusioni }}</td>
            </tr>
            <tr>
                <th>Data di valutazione</th>
                <td>{{ chiusura_servizio.dataValutazione ? chiusura_servizio.dataValutazione|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
				<th>Operazioni</th>
				<td>
					<div class="btn-group" role="group">
						<button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
							Apri
						</button>
						<ul class="dropdown-menu">
							<li>
								<a class="dropdown-item" href="{{ path('app_chiusura_servizio_edit', {'id': chiusura_servizio.id}) }}">
									<i class="bi bi-pencil-square"></i>
									Modifica</a>
							</li>
							<li>
								<a class="dropdown-item" href="{{ path('app_chiusura_servizio_delete', {'id': chiusura_servizio.id, '_token': csrf_token('delete' ~ chiusura_servizio.id)}) }}" onclick="return confirm('Sei sicuro di voler cancellare questa scheda?');">
									<i class="bi bi-trash3"></i>Cancella</a>
							</li>
						</ul>
					</div>
				</td>
			</tr>
        </tbody>
    </table>
</div>
