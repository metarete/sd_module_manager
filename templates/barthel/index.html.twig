{% extends 'base.html.twig' %}

{% block title %}Barthel index{% endblock %}

{% block body %}
    <h1>Barthel</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Data di valutazione</th>
                <th>Alimentazione</th>
                <th>Bagno Doccia</th>
                <th>Igiene Personale</th>
                <th>Abbigliamento</th>
                <th>Continenza Intestinale</th>
                <th>Continenza Urinaria</th>
                <th>Toilet</th>
                <th>Totale Valutazione Funzionale</th>
                <th>Trasferimento Letto-Sedia</th>
                <th>Scale</th>
                <th>Deambulazione</th>
                <th>DeambulazioneValida</th>
                <th>Uso Carrozzina</th>
                <th>Totale</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
        {% for barthel in barthels %}
            <tr>
                <td>{{ barthel.id }}</td>
                <td>{{ barthel.nome }}</td>
                <td>{{ barthel.dataValutazione ? barthel.dataValutazione|date('Y-m-d') : '' }}</td>
                <td>{{ barthel.alimentazione }}</td>
                <td>{{ barthel.bagnoDoccia }}</td>
                <td>{{ barthel.igienePersonale }}</td>
                <td>{{ barthel.abbigliamento }}</td>
                <td>{{ barthel.continenzaIntestinale }}</td>
                <td>{{ barthel.continenzaUrinaria }}</td>
                <td>{{ barthel.toilet }}</td>
                <td>{{ barthel.totaleValutazioneFunzionale }}</td>
                <td>{{ barthel.trasferimentoLettoSedia }}</td>
                <td>{{ barthel.scale }}</td>
                <td>{{ barthel.deambulazione ? 'Yes' : 'No' }}</td>
                <td>{{ barthel.deambulazioneValida }}</td>
                <td>{{ barthel.usoCarrozzina }}</td>
                <td>{{ barthel.totale }}</td>
                <td>
                    <a href="{{ path('app_barthel_show', {'id': barthel.id}) }}">mostra</a>
                    <a href="{{ path('app_barthel_edit', {'id': barthel.id}) }}">modifica</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="18">nessuna scheda trovata</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_barthel_new') }}">Crea nuova scheda</a>
{% endblock %}
