{% extends 'base.html.twig' %}

{% block title %}ElencoBarthel{% endblock %}

{% block body %}
    <h1>Barthel</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Data di valutazione</th>
                <th>Alimentazione</th>
                <th>Bagno Doccia</th>
                <th>Igiene Personale</th>
                <th>Abbigliamento</th>
                <th>Continenza Intestinale</th>
                <th>Continenza Urinaria</th>
                <th>Toilet</th>
                <th>Totale Valutazione Funzionale</th>
                <th>Trasferimento Letto-Sedia</th>
                <th>Scale</th>
                <th>Deambulazione</th>
                <th>DeambulazioneValida</th>
                <th>Uso Carrozzina</th>
                <th>Totale</th>
                <th>Operazioni</th>
            </tr>
        </thead>
        <tbody>
        {% for barthel in barthels %}
            <tr>
                <td>{{ barthel.id }}</td>
                <td>{{ barthel.nome }}</td>
                <td>{{ barthel.dataValutazione ? barthel.dataValutazione|date('Y-m-d') : '' }}</td>
                <td>{{ barthel.alimentazione }}</td>
                <td>{{ barthel.bagnoDoccia }}</td>
                <td>{{ barthel.igienePersonale }}</td>
                <td>{{ barthel.abbigliamento }}</td>
                <td>{{ barthel.continenzaIntestinale }}</td>
                <td>{{ barthel.continenzaUrinaria }}</td>
                <td>{{ barthel.toilet }}</td>
                <td>{{ barthel.totaleValutazioneFunzionale }}</td>
                <td>{{ barthel.trasferimentoLettoSedia }}</td>
                <td>{{ barthel.scale }}</td>
                <td>{{ barthel.deambulazione ? 'Si' : 'No' }}</td>
                <td>{{ barthel.deambulazioneValida }}</td>
                <td>{{ barthel.usoCarrozzina }}</td>
                <td>{{ barthel.totale }}</td>
                <td>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        Apri
                        </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="{{ path('app_barthel_show', {'id': barthel.id}) }}">Visualizza</a>
                        <li><a class="dropdown-item" href="{{ path('app_barthel_edit', {'id': barthel.id}) }}">Modifica</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="18">Nessuna scheda disponibile</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
    <a class="btn btn-warning" href="{{ path('app_homepage') }}">Men√π Principale</a>

<nav aria-label="Page navigation example">
   <ul class="pagination justify-content-center">
       <li class="page-item"><a class="page-link {% if pagina==1 %}disabled{% endif %}" href="{{ path('app_barthel_index') }}"><<</a></li>
        <li class="page-item"><a class="page-link {% if pagina==1 %}disabled{% endif %}" href="{{ path('app_barthel_index', {'page':pagina-1}) }}"><</a></li>
    {% for i in 1..pagine_totali %}
        {% if i <= pagina + 1 and i >= pagina - 1 %}
            <li class="page-item"><a class="page-link" href="{{ path('app_barthel_index', {'page':i}) }}">{{i}}</a></li>
        {% endif %}
    {% endfor %}
    <li class="page-item"><a class="page-link {% if pagina==pagine_totali %}disabled{% endif %}" href="{{ path('app_barthel_index', {'page':pagina+1}) }}">></a></li>
      <li class="page-item"><a class="page-link {% if pagina==pagine_totali %}disabled{% endif %}" href="{{ path('app_barthel_index', {'page':pagine_totali}) }}">>></a></li>
  </ul>
</nav>
{% endblock %}
