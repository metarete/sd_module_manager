{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
	<style>
		body {
			margin: 0;
		}
		.card {
			padding: 0;
			text-align: left;
		}
		.card-text {
			border-bottom-style: solid;
		}
		.card-title {
			border-bottom-style: solid;
			padding-bottom: 8px
		}
	</style>
{% endblock %}
<div class="container-fluid text-center">
	<div class="row">
		<div class="card">
			<div class="card-body">
				<table class="col-sm-12">
					<thead class="cf"></thead>
					<tbody>
						<tr>
							<th>
								<h5 class="card-text">Operatore</h5>
							</th>
							<td>
								<p class="card-title">{{ lesioni.operatore.name }}
									{{lesioni.operatore.surname}}</p>
							</td>
						</tr>
						<tr>
							<th>
								<h5 class="card-text">Data Valutazione</h5>
							</th>
							<td>
								<p class="card-title">{{ lesioni.dataRivalutazioniSettimanali ? lesioni.dataRivalutazioniSettimanali|date('Y-m-d') : '' }}</p>
							</td>
						</tr>
						<tr>
							<th>
								<h5 class="card-text">Tipologia Lesione</h5>
							</th>
							<td>
								<p class="card-title">{{ lesioni.tipologiaLesione}}</p>
							</td>
						</tr>
						<tr>
							<th>
								<h5 class="card-text">Numero Sede Lesione</h5>
							</th>
							<td>
								<p class="card-title">{{ lesioni.numeroSedeLesione}}</p>
							</td>
						</tr>
						<tr>
							<th>
								<h5 class="card-text">Grado Lesione</h5>
							</th>
							<td>
								<p class="card-title">{{ lesioni.gradoLesione}}</p>
							</td>
						</tr>
						<tr>
							<th>
								<h5 class="card-text">Condizione Lesione</h5>
							</th>
							<td>
								<p class="card-title">{{ lesioni.condizioneLesione}}</p>
							</td>
						</tr>
						<tr>
							<th>
								<h5 class="card-text">Bordi Lesione</h5>
							</th>
							<td>
								<p class="card-title">{{ lesioni.bordiLesione}}</p>
							</td>
						</tr>
						<tr>
							<th>
								<h5 class="card-text">Cute Perilesionale</h5>
							</th>
							<td>
								<p class="card-title">{{ lesioni.cutePerilesionale}}</p>
							</td>
						</tr>
						<tr>
							<th>
								<h5 class="card-text">Note sulla lesione</h5>
							</th>
							<td>
								<p class="card-title">{{ lesioni.noteSullaLesione}}</p>
							</td>
						</tr>
						<tr>
							<th>
								<h5 class="card-text">Operazioni</h5>
							</th>
							<td>
								<p class="card-title" style="border-bottom-style: none;">
									<div class="btn-group" role="group">
										<button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
											Apri
										</button>
										<ul class="dropdown-menu">
											<li>
												<a class="dropdown-item" href="{{ path('app_lesioni_edit', {'id': lesioni.id}) }}">
													<i class="bi bi-pencil-square"></i>
													Modifica</a>
											</li>
											<li>
												<a class="dropdown-item" href="{{ path('app_lesioni_delete', {'id': lesioni.id, '_token': csrf_token('delete' ~ lesioni.id)}) }}" onclick="return confirm('Sei sicuro di voler cancellare questa scheda?');">
													<i class="bi bi-trash3"></i>Cancella</a>
											</li>
										</ul>
									</div>
								</p>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
