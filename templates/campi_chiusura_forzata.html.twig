{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
	<style>
		body {
			margin: 0;
		}
		.card {
			padding: 0;
			text-align: left;
		}
		.card-text {
			border-bottom-style: solid;
		}
		.card-title {
			border-bottom-style: solid;
			padding-bottom: 8px
		}
	</style>
{% endblock %}
<div class="container-fluid text-center">
	<div class="row">
		<div class="card">
			<div class="card-body">
				<div class="row">
					<div class="col">
						<table class="col-sm-12">
							<thead class="cf"></thead>
							<tbody>
								<tr>
									<th>
										<h5 class="card-text">Operatore</h5>
									</th>
								</tr>
								<tr>
									<td>
										<p class="card-title">{{ chiusura_forzata.operatore.name }}
											{{chiusura_forzata.operatore.surname}}</p>
									</td>
								</tr>
								<tr>
									<th>
										<h5 class="card-text">Data di valutazione</h5>
									</th>
								</tr>
								<tr>
									<td>
										<p class="card-title">{{ chiusura_forzata.data ? chiusura_forzata.data|date('d-m-Y') : '' }}</p>
									</td>
								</tr>
							</tbody>
						</table>
					</div>
					<div class="col">
						<table class="col-sm-12">
							<thead class="cf"></thead>
							<tbody>
								<tr>
									<th>
										<h5 class="card-text">Conclusioni</h5>
									</th>
								</tr>
								<tr>
									<td>
										<p class="card-title">{{ chiusura_forzata.conclusioni }}</p>
									</td>
								</tr>
								<tr>
									<th>
										<h5 class="card-text">Motivazione chiusura</h5>
									</th>
								</tr>
								<tr>
									<td>
										<p class="card-title">{{ chiusura_forzata.motivazioneChiusuraForzata }}</p>
									</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
