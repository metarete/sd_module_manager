{% extends 'base.html.twig' %}

{% block title %}Operatore
{% endblock %}

{% block body %}
	<h1>Operatori</h1>

	<div id="visualizza-tables">
		<table class="col-sm-12">
			<thead class="cf"></thead>
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
				<tr>
					<th>Nome</th>
					<td>{{ user.name }}</td>
				</tr>
				<tr>
					<th>Cognome</th>
					<td>{{ user.surname }}</td>
				</tr>
                <tr>
					<th>Username</th>
					<td>{{ user.username }}</td>
				</tr>
                <tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
                <tr>
					<th>Ruolo</th>
					<td>{{ user.roles[0] }}</td>
				</tr>
			</tbody>
		</table>
	</div>

	<div class="pb-2 mb-4"></div>

	<a href="{{ path('app_user_index') }}" type="button" class="btn btn-secondary">
		<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewbox="0 0 16 16">
			<path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
		</svg>
		Torna indietro</a>
        
	<div class="pb-2 mb-4"></div>
{% endblock %}
