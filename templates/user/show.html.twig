{% extends 'base.html.twig' %}

{% block title %}Operatore
{% endblock %}

{% block body %}
	{% block stylesheets %}
		{{ encore_entry_link_tags('app') }}
		<style>
			body {
				margin: 0;
			}
			.card {
				padding: 0;
				text-align: left;
			}
			.card-text {
				border-bottom-style: solid;
			}
			.card-title {
				border-bottom-style: solid;
				padding-bottom: 8px
			}
		</style>
	{% endblock %}
	<h1><i class="bi bi-person-badge"></i> Operatore</h1>

	<div class="container-fluid text-center">
		<div class="row">
			<div class="card">
				<div class="card-body">
					<table class="col-sm-12">
						<thead class="cf"></thead>
						<tbody>
							<tr>
								<th>
									<h5 class="card-text">Nome</h5>
								</th>
								<tr>
								</tr>
								<td>
									<p class="card-title">{{ user.name }}
										{{user.surname}}</p>
								</td>
							</tr>
							{% if user.username != "" %}
							<tr>
								<th>
									<h5 class="card-text">Username</h5>
								</th>
								<tr>
								</tr>
								<td>
									<p class="card-title">{{ user.username }}
									</p>
								</td>
							</tr>
							{% endif %}
							<tr>
								<th>
									<h5 class="card-text">Email</h5>
								</th>
								<tr>
								</tr>
								<td>
									<p class="card-title">{{ user.email }}
									</p>
								</td>
							</tr>
							<tr>
								<th>
									<h5 class="card-text">Ruolo</h5>
								</th>
								<tr>
								</tr>
								<td>
									<p class="card-title">
									{% if user.roles[0]=="ROLE_ADMIN" %}
										Admin
									{% else %}
										Utente
									{% endif %}
									</p>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>


	<div class="pb-2 mb-4"></div>

	<a href="{{ path('app_user_index') }}" type="button" class="btn btn-secondary">
		<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewbox="0 0 16 16">
			<path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
		</svg>
		Torna indietro</a>

	<div class="pb-2 mb-4"></div>
{% endblock %}
