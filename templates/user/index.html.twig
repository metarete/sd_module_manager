{% extends 'base.html.twig' %}

{% block title %}Operatore
{% endblock %}

{% block body %}
	<h1>Operatori</h1>

	<div class="no-more-tables">
		<table class="col-sm-12  table-striped table-condensed cf">
			<thead>
				<tr>
					<th>Id</th>
					<th>Nome/Cognome</th>
					<th>Username</th>
                    <th>Ruolo</th>
					<th>Operazioni</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.name }} {{ user.surname }}</td>
						<td>{{ user.username }}</td>
                        <td>{{ user.roles[0] }}</td>
						<td>
							<a href="{{ path('app_user_show', {'id': user.id}) }}" type="button" class="btn btn-primary">Visualizza</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">Nessun Operatore disponibile</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

	<div class="pb-2 mb-4"></div>

	<a href="{{ path('app_elenco_schede') }}" type="button" class="btn btn-secondary">
		<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewbox="0 0 16 16">
			<path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
		</svg>
		Torna indietro</a>

	<div class="pb-2 mb-4"></div>

{% endblock %}
