	Nessuna VAS disponibile
{% else %}
	<div class="visualizzazione-desktop">
		<div class="container-fluid text-center">
			<div class="row">
				<div class="card">
					<div class="card-body">
						<div class="row">
							<table id="tabella-index-scale-scheda-pai" class="col-sm-12  table-striped table-condensed cf">
								<thead class="cf"></thead>

								<thead></thead>
								<tbody>
									<tr>
										<th style="width: 300px;">Data inizio/fine</th>
										{% for vas in vass %}
											<th>{{vas.schedaPai.dataInizio ? vas.schedaPai.dataInizio|date('d/m/Y') : ''}}
												--
												{{vas.schedaPai.dataFine ? vas.schedaPai.dataFine|date('d/m/Y') : ''}}</th>
										{% endfor %}

									</tr>
									<tr>

