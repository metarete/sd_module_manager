{% extends 'base.html.twig' %}

{% block title %}Pagina Profilo
{% endblock %}

{% block body %}
	{% block stylesheets %}
		{{ encore_entry_link_tags('app') }}
		<style>
			body {
				margin: 0;
			}
			.card {
				padding: 0;
				text-align: left;
			}
		</style>
	{% endblock %}
	<h1><i class="bi bi-person-badge"></i> Profilo Utente</h1>

	<div class="container-fluid text-center">
		<div class="row">
			<div class="card">
				<div class="card-body">
					<table class="col-sm-12">
						<thead class="cf"></thead>
						<tbody>
							<tr>
								<th>
									<h5 class="card-text">Nome</h5>
								</th>
								<tr>
								</tr>
								<td>
									<p class="card-title">
										{% if user.name is empty %}
											Nessuno
										{% else %}
											{{ user.name }}
										{% endif %}
									</p>
								</td>
							</tr>
							<tr>
								<th>
									<h5 class="card-text">Cognome</h5>
								</th>
								<tr>
								</tr>
								<td>
									<p class="card-title">
										{% if user.surname is empty %}
											Nessuno
										{% else %}
											{{ user.surname }}
										{% endif %}
									</p>
								</td>
							</tr>
							<tr>
								<th>
									<h5 class="card-text">Ruolo</h5>
								</th>
								<tr>
								</tr>
								<td>
									<p class="card-title">
										{% if "ROLE_ADMIN" in user.roles %}
											Admin
										{% else %}
											Utente
										{% endif %}										
									</p>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	<div class="pb-2 mb-2"></div>
	<a class="btn btn-primary" href="{{ path('app_profilo_edit', {'id': user.id}) }}">Modifica dati personali</a>
	<div class="pb-2 mb-2"></div>
{% endblock %}
