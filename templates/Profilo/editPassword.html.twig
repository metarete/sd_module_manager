{% extends 'base.html.twig' %}

{% block title %}EditUserPassword
{% endblock %}

{% block body %}
	<h1><i class="bi bi-pen"></i> Modifica Password</h1>

	<form action="{{ path('app_profilo_password' , {'id': user.id})}}" method="POST" id="my_form">
		<div class="mb-3 row">
			<label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
			<div class="col-sm-10">
				<input type="email" class="form-control" id="inputEmail" name='email'>
			</div>
		</div>
		<div class="mb-3 row">
			<label for="inputPassword" class="col-sm-2 col-form-label">Password vecchia</label>
			<div class="col-sm-10">
				<input type="password" class="form-control" id="inputPassword1" name='password_vecchia'>
			</div>
		</div>
		<div class="mb-3 row">
			<label for="inputPassword" class="col-sm-2 col-form-label">Password nuova</label>
			<div class="col-sm-10">
				<input type="password" class="form-control" id="inputPassword2" name='password_nuova'>
			</div>
		</div>
		<div class="mb-3 row">
			<label for="inputPassword" class="col-sm-2 col-form-label">Conferma Password</label>
			<div class="col-sm-10">
				<input type="password" class="form-control" id="inputPassword3" name='conferma_password'>
			</div>
		</div>

		<button class="btn btn-primary">{{ button_label|default('Salva') }}</button>
		<a class="btn btn-danger" href="{{ path('app_profilo_show') }}">Annulla</a>

	{% endblock %}
