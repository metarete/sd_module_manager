{% extends 'base.html.twig' %}

{% block title %}EditUserPassword
{% endblock %}

{% block body %}
	<h1><i class="bi bi-pen"></i> Modifica Password</h1>

	<div class="b-example-divider"></div>
	
	{% for message in app.flashes('Fallimento') %}
		<div class="alert alert-danger alert-dismissible fade show" role="alert">
		<i class="bi bi-exclamation-triangle-fill" style = "colore:red"></i>
			{{ message }}
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	{% endfor %}
	

	{{ include('Profilo/_form.html.twig', {'button_label': 'Salva'}) }}
	
	{% endblock %}
