							{{i.name}}
							{{i.surname}}
							<br>
						{% endfor %}
					</p>

				</div>
			</div>
		</div>
		<div class="col">
			<div class="card">

				<div class="card-body">
					<i class="bi bi-people" style="font-size:25px;"></i>
					<h5 class="card-text">Ausiliari Socio Assistenziale
					</h5>
					<p class="card-title">
						{% if scheda_pai.idOperatoreSecondarioAsa is empty %}
							Nessuno
						{% endif %}
