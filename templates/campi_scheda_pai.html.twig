<style>
	body {
		margin: 0;
	}
</style>
<div class="container-fluid text-center">
	<div class="row">
		<div class="col">
			<div class="card">

				<div class="card-body">
					<i class="bi bi-person" style="font-size:25px;"></i>
					<h5 class="card-text">Operatore Principale
					</h5>
					<p class="card-title">
						{% if scheda_pai.idOperatorePrincipale  is empty %}
							Nessuno
						{% else %}
							{{scheda_pai.idOperatorePrincipale.name}}
							{{scheda_pai.idOperatorePrincipale.surname}}
						{% endif %}
					</p>
				</div>
			</div>
		</div>
		<div class="col">
			<div class="card">

				<div class="card-body">
					<i class="bi bi-people" style="font-size:25px;"></i>
					<h5 class="card-text">Infermieri
					</h5>
					<p class="card-title">
						{% if scheda_pai.idOperatoreSecondarioInf  is empty %}
							Nessuno
						{% endif %}
						{% for i in scheda_pai.idOperatoreSecondarioInf %}
							{{i.name}}
							{{i.surname}}
							<br>
						{% endfor %}
					</p>

				</div>
			</div>
		</div>
		<div class="col">
			<div class="card">

				<div class="card-body">
					<i class="bi bi-people" style="font-size:25px;"></i>
					<h5 class="card-text">Terapisti della riabilitazione
					</h5>
