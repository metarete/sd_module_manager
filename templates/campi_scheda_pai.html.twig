<div id="visualizza-tables">
	<table class="col-sm-12 ">
		<tbody>
			{% if variabileTest != 1%}
				<tr>
					<th>Id</th>
					<td>{{ scheda_pai.id }}</td>
				</tr>
			{% endif %}
			<tr>

				<th>Operatore Principale</th>
				<td>
					{% if scheda_pai.idOperatorePrincipale == null %}
