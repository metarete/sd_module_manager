{% extends 'base.html.twig' %}

{% block title %}ElencoTinetti{% endblock %}

{% block body %}
    <h1>Tinetti</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Data di valutazione</th>
                <th>Equilibrio da seduto</th>
                <th>Alzarsi dalla sedia</th>
                <th>Tentativo di alzarsi</th>
                <th>Equilibrio stazione eretta</th>
                <th>Equilibrio stazione eretta prolungata</th>
                <th>Romberg</th>
                <th>Romberg Sensibilizzato</th>
                <th>Girarsi a 360° a</th>
                <th>Girarsi a 360° b</th>
                <th>Sedersi</th>
                <th>Totale Equilibrio</th>
                <th>Inizio della deambulazione immediatamente dopo il via</th>
                <th>Lunghezza passo piede destro</th>
                <th>Altezza passo piede destro</th>
                <th>Lunghezza passo piede sinistro</th>
                <th>Altezza passo piede sinistro</th>
                <th>Simmetria del passo</th>
                <th>Continuita del passo</th>
                <th>Traiettoria</th>
                <th>Tronco</th>
                <th>Cammino</th>
                <th>Totale Andatura</th>
                <th>Totale</th>
                <th>Operazioni</th>
            </tr>
        </thead>
        <tbody>
        {% for tinetti in tinettis %}
            <tr>
                <td>{{ tinetti.id }}</td>
                <td>{{ tinetti.nome }}</td>
                <td>{{ tinetti.dataValutazione ? tinetti.dataValutazione|date('Y-m-d') : '' }}</td>
                <td>{{ tinetti.equilibrioSeduto }}</td>
                <td>{{ tinetti.sedia }}</td>
                <td>{{ tinetti.alzarsi }}</td>
                <td>{{ tinetti.stazioneEretta }}</td>
                <td>{{ tinetti.stazioneErettaProlungata }}</td>
                <td>{{ tinetti.romberg }}</td>
                <td>{{ tinetti.rombergSensibilizzato }}</td>
                <td>{{ tinetti.girarsi1 }}</td>
                <td>{{ tinetti.girarsi2 }}</td>
                <td>{{ tinetti.sedersi }}</td>
                <td>{{ tinetti.totaleEquilibrio }}</td>
                <td>{{ tinetti.inizioDeambulazione }}</td>
                <td>{{ tinetti.piedeDx }}</td>
                <td>{{ tinetti.piedeDx2 }}</td>
                <td>{{ tinetti.piedeSx }}</td>
                <td>{{ tinetti.piedeSx2 }}</td>
                <td>{{ tinetti.simmetriaPasso }}</td>
                <td>{{ tinetti.continuitaPasso }}</td>
                <td>{{ tinetti.traiettoria }}</td>
                <td>{{ tinetti.tronco }}</td>
                <td>{{ tinetti.cammino }}</td>
                <td>{{ tinetti.totaleAndatura }}</td>
                <td>{{ tinetti.totale }}</td>
                <td>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        Apri
                        </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="{{ path('app_tinetti_show', {'id': tinetti.id}) }}">Visualizza</a>
                        <li><a class="dropdown-item" href="{{ path('app_tinetti_edit', {'id': tinetti.id}) }}">Modifica</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="27">Nessuna scheda disponibile</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
    <a class="btn btn-warning" href="{{ path('app_homepage') }}">Menù Principale</a>

<nav aria-label="Page navigation example">
   <ul class="pagination justify-content-center">
       <li class="page-item"><a class="page-link {% if pagina==1 %}disabled{% endif %}" href="{{ path('app_tinetti_index') }}"><<</a></li>
        <li class="page-item"><a class="page-link {% if pagina==1 %}disabled{% endif %}" href="{{ path('app_tinetti_index', {'page':pagina-1}) }}"><</a></li>
    {% for i in 1..pagine_totali %}
        {% if i <= pagina + 1 and i >= pagina - 1 %}
            <li class="page-item"><a class="page-link" href="{{ path('app_tinetti_index', {'page':i}) }}">{{i}}</a></li>
        {% endif %}
    {% endfor %}
    <li class="page-item"><a class="page-link {% if pagina==pagine_totali %}disabled{% endif %}" href="{{ path('app_tinetti_index', {'page':pagina+1}) }}">></a></li>
      <li class="page-item"><a class="page-link {% if pagina==pagine_totali %}disabled{% endif %}" href="{{ path('app_tinetti_index', {'page':pagine_totali}) }}">>></a></li>
  </ul>
</nav>
{% endblock %}
