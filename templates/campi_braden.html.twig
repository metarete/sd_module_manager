{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
	<style>
		body {
			margin: 0;
		}
		.card {
			padding: 0;
			text-align: left;
		}
		.card-text {
			border-bottom-style: solid;
		}
		.card-title {
			border-bottom-style: solid;
			padding-bottom: 8px
		}
	</style>
{% endblock %}
<div class="container-fluid text-center">
	<div class="row">
		<div class="card">
			<div class="card-body">
				<div class="row">
					<div class="col">
						<table class="col-sm-12">
							<thead class="cf"></thead>
							<tbody>
								<tr>
									<th>
										<h5 class="card-text">Operatore</h5>
									</th>
								</tr>
								<tr>
									<td>
										<p class="card-title">{{ braden.operatore.name }}
											{{braden.operatore.surname}}</p>
									</td>
								</tr>
								<tr>
									<th>
										<h5 class="card-text">Data Valutazione</h5>
									</th>
								</tr>
								<tr>
									<td>
										<p class="card-title">{{ braden.dataValutazione ? braden.dataValutazione|date('Y-m-d') : '' }}</p>
									</td>
								</tr>
							</tbody>
						</table>
					</div>
					<div class="pb-2 mb-4"></div>
					<div class="row">
						<div class="col">
							<table class="col-sm-12">
								<thead class="cf"></thead>
								<tbody>
									<tr>
										<th>
											<h5 class="card-text">Percezione Sensoriale</h5>
										</th>
									</tr>
									<tr>
										<td>
											<p class="card-title">{{ braden.percezioneSensoriale }}</p>
										</td>
									</tr>
									<tr>
										<th>
											<h5 class="card-text">Umidità</h5>
										</th>
									</tr>
									<tr>
										<td>
											<p class="card-title">{{ braden.umidita }}</p>
										</td>
									</tr>
									<tr>
										<th>
											<h5 class="card-text">Attività</h5>
										</th>
									</tr>
									<tr>
										<td>
											<p class="card-title">{{ braden.attivita }}</p>
										</td>
									</tr>
									<tr>
										<th>
											<h5 class="card-text">Mobilità</h5>
										</th>
									</tr>
									<tr>
										<td>
											<p class="card-title">{{ braden.mobilita }}</p>
										</td>
									</tr>
								</tbody>
							</table>
						</div>
						<div class="col">
							<table class="col-sm-12">
								<thead class="cf"></thead>
								<tbody>
									<tr>
										<th>
											<h5 class="card-text">Nutrizione</h5>
										</th>
									</tr>
									<tr>
										<td>
											<p class="card-title">{{ braden.nutrizione }}</p>
										</td>
									</tr>
									<tr>
										<th>
											<h5 class="card-text">Frizione Scivolamento</h5>
										</th>
									</tr>
									<tr>
										<td>
											<p class="card-title">{{ braden.frizioneScivolamento }}</p>
										</td>
									</tr>
									<tr>
										<th>
											<h5 class="card-text">Totale</h5>
										</th>
									</tr>
									<tr>
										<td>
											<p class="card-title" id="totale">{{ braden.totale }}</p>
										</td>
									</tr>
									<tr>
										<th>
											<h5 class="card-text">Operazioni</h5>
										</th>
									</tr>
									<tr>
										<td>
											<p class="card-title" style="border-bottom-style: none;">
												<div class="btn-group" role="group">
													<button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
														Apri
													</button>
													<ul class="dropdown-menu">
														<li>
															<a class="dropdown-item" href="{{ path('app_form_pai_braden_edit', {'id': braden.id}) }}">
																<i class="bi bi-pencil-square"></i>
																Modifica</a>
														</li>
														<li>
															<a class="dropdown-item" href="{{ path('app_form_pai_braden_delete', {'id': braden.id, '_token': csrf_token('delete' ~ braden.id)}) }}" onclick="return confirm('Sei sicuro di voler cancellare questa scheda?');">
																<i class="bi bi-trash3"></i>Cancella</a>
														</li>
													</ul>
												</div>
											</p>
										</td>
									</tr>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
