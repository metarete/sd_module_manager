{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
	<style>
		body {
			margin: 0;
		}
		.card {
			padding: 0;
			text-align: left;
		}
		.card-text {
			border-bottom-style: solid;
		}
		.card-title {
			border-bottom-style: solid;
			padding-bottom: 8px
		}
	</style>
{% endblock %}

<div class="visualizzazione-desktop">
	<div class="container-fluid text-center">
		<div class="row">
			<div class="card">
				<div class="card-body">
					<div class="row">
						<table id="tabella-index-scale-scheda-pai" class="col-sm-12  table-striped table-condensed cf">
							<thead class="cf"></thead>
							<thead>
								<tr>
									<td></td>
									{% for braden in bradens %}
										<th data-title='Data Valutazione'>{{braden.dataValutazione ? braden.dataValutazione|date('d/m/Y') : ''}}</th>
									{% endfor %}
								</tr>
							</thead>
							<tbody>
								<tr>
									<th style="width: 300px;">Percezione Sensoriale</th>
									{% for braden in bradens %}
										<td>{{ braden.percezioneSensoriale}}</td>
									{% endfor %}
								</tr>
								<tr>
									<th>Umidità</th>
									{% for braden in bradens %}
										<td>{{ braden.umidita}}</td>
									{% endfor %}
								</tr>
								<tr>
									<th>Attività</th>
									{% for braden in bradens %}
										<td>{{ braden.attivita}}</td>
									{% endfor %}
								</tr>
								<tr>
									<th>Mobilità</th>
									{% for braden in bradens %}
										<td>{{ braden.mobilita}}</td>
									{% endfor %}
								</tr>
								<tr>
									<th>Nutrizione</th>
									{% for braden in bradens %}
										<td>{{ braden.nutrizione}}</td>
									{% endfor %}
								</tr>
								<tr>
									<th>Frizione Scivolamento</th>
									{% for braden in bradens %}
										<td>{{ braden.frizioneScivolamento}}</td>
									{% endfor %}
								</tr>
								<tr>
									<th>Presenza Presidi Antidecubito</th>
									{% for braden in bradens %}
										<td>{{ braden.presenzaPresidiAntidecubito}}</td>
									{% endfor %}
								</tr>
								<tr>
									<th>Presidi Antidecubito</th>
									{% for braden in bradens %}
										<td>{% if braden.presidiAntidecubito is empty %}
										Nessuno
										{% else %}
											{% for i in braden.presidiAntidecubito %}
											<li>{{ i.nome }}</li>
											{% endfor %}
										{% endif %}</td>
									{% endfor %}
								</tr>
								<tr>
									<th>Totale</th>
									{% for braden in bradens %}
										<td>
											<strong>{{ braden.totale}}</td>
										{% endfor %}
									</tr>
								</tr>
								<tr>
									<th></th>
									{% for braden in bradens %}
										<td><br></td>
									{% endfor %}
								</tr>
								<tr>
									<th>Operatore</th>
									{% for braden in bradens %}
										<td>{{ braden.operatore.name }}
											{{braden.operatore.surname}}</td>
									{% endfor %}
								</tr>
								<tr>
									<th></th>
									{% for braden in bradens %}
										<td>
											<p class="card-title" id="totale" style="border-bottom-style: none;">
												<div class="btn-group" role="group">
													<button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
														Apri
													</button>
													<ul class="dropdown-menu">
														<li>
															<a class="dropdown-item" href="{{ path('app_form_pai_braden_edit', {'id': braden.id}) }}">
																<i class="bi bi-pencil-square"></i>
																Modifica</a>
														</li>
														<li>
															<a class="dropdown-item" href="{{ path('app_form_pai_braden_delete', {'id': braden.id, '_token': csrf_token('delete' ~ braden.id)}) }}" onclick="return confirm('Sei sicuro di voler cancellare questa scheda?');">
																<i class="bi bi-trash3"></i>Cancella</a>
														</li>
													</ul>
												</div>
											</p>
										</td>
									{% endfor %}
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

