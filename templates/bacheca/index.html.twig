{% extends 'base.html.twig' %}

{% block title %}Pagina Principale
{% endblock %}

{% block body %}

	<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
	<h1>Bacheca</h1>

	
		<div class="row">
			<div class="col">
				<div class="card">

					<div class="card-body">
						<i class="bi bi-file-text" style="font-size:25px;"></i>
						<h5 class="card-title">{{totaleSchede}}</h5>
						<p class="card-text">Totale schede Pai.
						</p>
					</div>
				</div>
			</div>
			<div class="col">
				<div class="card">

					<div class="card-body">
						<i class="bi bi-people" style="font-size:25px;"></i>
						<h5 class="card-title">{{totaleOperatori}}</h5>
						<p class="card-text">Totale Operatori.
						</p>
					</div>
				</div>
			</div>
			<div class="col">
				<div class="card">

					<div class="card-body">
						<i class="bi bi-person-lines-fill" style="font-size:25px;"></i>
						<h5 class="card-title">{{totalePazienti}}</h5>
						<p class="card-text">Totale Pazienti.
						</p>
					</div>
				</div>
			</div>
		</div>
		<div class="pb-2 mb-4"></div>
		<div class="row">
			<div class="col">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title">Schede Pai</h5>
						<div class="row justify-content-md-center">
							<div class="col-md-auto">
								<canvas id="myChart" style="width:100%;max-width:600px"></canvas>
							</div>
						</div>
						<div class="row text-center">
							<div class="col-sm-4">
								<div class="my-2 my-sm-0">
									<i class="mdi mdi-trending-up text-success mt-3 h3"></i>
									<i class="bi bi-circle-fill" style="color: #6f42c1"></i>
									<h3 class="fw-normal">
										<span id="percentualeNuove">{{percentualeNuove}}</span><span>%</span>
									</h3>
									<p class="text-muted mb-0">Nuove</p>
								</div>

							</div>
							<div class="col-sm-4">
								<div class="my-2 my-sm-0">
									<i class="mdi mdi-trending-down text-primary mt-3 h3"></i>
									<i class="bi bi-circle-fill" style="color: #d63384"></i>
									<h3 class="fw-normal">
										<span id="percentualeApprovate">{{percentualeApprovate}}</span><span>%</span>
									</h3>
									<p class="text-muted mb-0">
										Approvate</p>
								</div>

							</div>
							<div class="col-sm-4">
								<div class="my-2 my-sm-0">
									<i class="mdi mdi-trending-down text-danger mt-3 h3"></i>
									<i class="bi bi-circle-fill" style="color: #198754"></i>
									<h3 class="fw-normal">
										<span id="percentualeAttive">{{percentualeAttive}}</span><span>%</span>
									</h3>
									<p class="text-muted mb-0">
										Attive</p>
								</div>
							</div>
						</div>
						<div class="row text-center">
							<div class="col-sm-4">
								<div class="my-2 my-sm-0">
									<i class="mdi mdi-trending-up text-success mt-3 h3"></i>
									<i class="bi bi-circle-fill" style="color: #ffc107"></i>
									<h3 class="fw-normal">
										<span id="percentualeInAttesa">{{percentualeInAttesa}}</span><span>%</span>
									</h3>
									<p class="text-muted mb-0">In Attesa di chiusura</p>
								</div>

							</div>
							<div class="col-sm-4">
								<div class="my-2 my-sm-0">
									<i class="mdi mdi-trending-down text-primary mt-3 h3"></i>
									<i class="bi bi-circle-fill" style="color: #dc3545"></i>
									<h3 class="fw-normal">
										<span id="percentualeChiuse">{{percentualeChiuse}}</span><span>%</span>
									</h3>
									<p class="text-muted mb-0">
										Chiuse</p>
								</div>

							</div>
							<div class="col-sm-4">
								<div class="my-2 my-sm-0">
									<i class="mdi mdi-trending-down text-danger mt-3 h3"></i>
									<i class="bi bi-circle-fill" style="color: #fd7e14"></i>
									<h3 class="fw-normal">
										<span id="percentualeChiuseConRinnovo">{{percentualeChiuseConRinnovo}}</span><span>%</span>
									</h3>
									<p class="text-muted mb-0">
										Chiuse con rinnovo</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			

			<div class="pb-2 mb-4"></div>


			<div class="pb-2 mb-4"></div>


		{% endblock %}
