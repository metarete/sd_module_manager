<div id="visualizza-tables">
    <table class="col-sm-12">
        <thead class="cf">
        <tbody>
        {% if variabileTest != 1%}
            <tr>
                <th>Id</th>
                <td>{{ va.id }}</td>
            </tr>
        {% endif %}
            <tr>
                <th>Assistito</th>
                <td>{{va.schedaPAI.nomeAssistito}} {{va.schedaPAI.cognomeAssistito}}</td>
            </tr>
            <tr>
				<th>Operatore</th>
				<td>{{ va.operatore.name }} {{va.operatore.surname}}</td>
			</tr>
            <tr>
                <th>Data</th>
                <td>{{ va.data ? va.data|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Ora</th>
                <td>{{ va.ora ? va.ora|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Rilevazione di Base 2 volte</th>
                <td>{{ va.base2 }}</td>
            </tr>
            <tr>
                <th>Rilevazione al bisogno del Pz</th>
                <td>{{ va.pz }}</td>
            </tr>
            <tr>
                <th>Esito rilevazione post trattamento</th>
                <td>{{ va.esito }}</td>
            </tr>
            <tr>
                <th>Farmaci</th>
                <td>{{ va.farmaci ? 'Si' : 'No' }}</td>
            </tr>
            <tr>
                <th>Altro</th>
                <td>{{ va.altro ? 'Si' : 'No' }}</td>
            </tr>
            <tr>
				<th>Operazioni</th>
				<td>
					<div class="btn-group" role="group">
						<button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
							Apri
						</button>
						<ul class="dropdown-menu">
							<li>
								<a class="dropdown-item" href="{{ path('app_vas_edit', {'id': va.id}) }}">
									<i class="bi bi-pencil-square"></i>
									Modifica</a>
							</li>
							<li>
								<a class="dropdown-item" href="{{ path('app_vas_delete', {'id': va.id, '_token': csrf_token('delete' ~ va.id)}) }}" onclick="return confirm('Sei sicuro di voler cancellare questa scheda?');">
									<i class="bi bi-trash3"></i>Cancella</a>
							</li>
						</ul>
					</div>
				</td>
			</tr>
            </thead>
        </tbody>
    </table>
</div>