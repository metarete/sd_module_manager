{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
	<style>
		body {
			margin: 0;
		}
		.card {
			padding: 0;
			text-align: left;
		}
		.card-text {
			border-bottom-style: solid;
		}
		.card-title {
			border-bottom-style: solid;
			padding-bottom: 8px
		}
	</style>
{% endblock %}
<div class="container-fluid text-center">
	<div class="row">
		<div class="card">
			<div class="card-body">
				<table class="col-sm-12">
					<thead class="cf"></thead>
					<tbody>
						<tr>
							<th>
								<h5 class="card-text">Operatore</h5>
							</th>
							<td>
								<p class="card-title">{{ va.operatore.name }}
									{{va.operatore.surname}}</p>
							</td>
						</tr>
						<tr>
							<th>
								<h5 class="card-text">Data Valutazione</h5>
							</th>
							<td>
								<p class="card-title">{{ va.data ? va.data|date('Y-m-d') : '' }}</p>
							</td>
						</tr>
						<tr>
							<th>
								<h5 class="card-text">Rilevazione di Base 2 volte</h5>
							</th>
							<td>
								<p class="card-title">{{ va.base2}}</p>
							</td>
						</tr>
						<tr>
							<th>
								<h5 class="card-text">Rilevazione al bisogno del PZ</h5>
							</th>
							<td>
								<p class="card-title">{{ va.pz}}</p>
							</td>
						</tr>
						<tr>
							<th>
								<h5 class="card-text">Esito rilevazione post trattamento</h5>
							</th>
							<td>
								<p class="card-title">{{ va.esito}}</p>
							</td>
						</tr>
						<tr>
							<th>
								<h5 class="card-text">Farmaci</h5>
							</th>
							<td>
								<p class="card-title">{{ va.farmaci ? 'Si' : 'No' }}</p>
							</td>
						</tr>
						<tr>
							<th>
								<h5 class="card-text">Altro</h5>
							</th>
							<td>
								<p class="card-title">{{ va.altro ? 'Si' : 'No' }}</p>
							</td>
						</tr>
						<tr>
							<th>
								<h5 class="card-text">Operazioni</h5>
							</th>
							<td>
								<p class="card-title" style="border-bottom-style: none;">
									<div class="btn-group" role="group">
										<button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
											Apri
										</button>
										<ul class="dropdown-menu">
											<li>
												<a class="dropdown-item" href="{{ path('app_vas_edit', {'id': va.id}) }}">
													<i class="bi bi-pencil-square"></i>
													Modifica</a>
											</li>
											<li>
												<a class="dropdown-item" href="{{ path('app_vas_delete', {'id': va.id, '_token': csrf_token('delete' ~ va.id)}) }}" onclick="return confirm('Sei sicuro di voler cancellare questa scheda?');">
													<i class="bi bi-trash3"></i>Cancella</a>
											</li>
										</ul>
									</div>
								</p>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
