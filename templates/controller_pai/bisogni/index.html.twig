{% extends 'base.html.twig' %}

{% block title %}Bisogni index{% endblock %}

{% block body %}
    <h1>Bisogni</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Operazioni</th>
            </tr>
        </thead>
        <tbody>
        {% for bisogni in bisognis %}
            <tr>
                <td>{{ bisogni.id }}</td>
                <td>{{ bisogni.nome }}</td>
                <td>
                    <a href="{{ path('app_controller_pai_bisogni_show', {'id': bisogni.id}) }}">Visualizza</a>
                    <a href="{{ path('app_controller_pai_bisogni_edit', {'id': bisogni.id}) }}">Modifica</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Nessun bisogno disponibile</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_controller_pai_bisogni_new') }}">Crea Bisogno</a>
{% endblock %}
