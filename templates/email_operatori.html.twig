							<tr>
								<th>Nome Progetto</th>
								<td data-title='Nome Progetto'>{{d.nome_progetto}}</td>
							</tr>
							<tr>
								<th>Data Inizio</th>
								<td data-title='Data Inizio'>{{d.data_inizio}}</td>
							</tr>
							<tr>
								<th>Data Fine</th>
								<td data-title='Data Fine'>{{d.data_fine}}</td>
							</tr>
							<tr>
								<th>Assistito</th>
								<td data-title='Assistito'>{{ d.assistito}}</td>
							</tr>
							<tr>
								<th>Barthel in ritardo</th>
								<td data-title='Barthel'>{{ d.barthel}}</td>
							</tr>
							<tr>
								<th>Braden in ritardo</th>
								<td data-title='Braden'>{{ d.braden}}</td>
							</tr>
							<tr>
								<th>SPMSQ in ritardo</th>
								<td data-title='Spmsq'>{{ d.spmsq}}</td>
							</tr>
							<tr>
								<th>Tinetti in ritardo</th>
								<td data-title='Tinetti'>{{ d.tinetti}}</td>
							</tr>
							<tr>
								<th>VAS in ritardo</th>
								<td data-title='Vas'>{{ d.vas}}</td>
							</tr>
							<tr>
								<th>Lesioni in ritardo</th>
								<td data-title='Lesioni'>{{ d.lesioni}}</td>
							</tr>
						</table>
					{% endfor %}
				</div>
			{% endif %}

			{% if testoChiusura1 != '' %}
				<h3>Schede pai di progetti scaduti in attesa di chisura:
					<br></h3>
				<div style="overflow-x: auto; padding: 10px">
					{% for d in descrizioneSchedeDaChiudere %}
						<br>
						<table class='tabella'>
							<tr>
								<th>Nome Progetto</th>
								<td data-title='Nome Progetto'>{{d.nome_progetto}}</td>
							</tr>
							<tr>
								<th>Data Inizio</th>
								<td data-title='Data Inizio'>{{d.data_inizio}}</td>
							</tr>
							<tr>
								<th>Data Fine</th>
								<td data-title='Data Fine'>{{d.data_fine}}</td>
							</tr>
							<tr>
								<th>Assistito</th>
								<td data-title='Assistito'>{{ d.assistito}}</td>
							</tr>
							<tr>
								<th>Stato</th>
								<td data-title='Stato'>In Attesa Di Chiusura</td>
							</tr>

							<tr>
								<th>Chiudi</th>
								<td data-title='Chiudi'>
									<a href="{{url}}/scheda_pai/app_scadenzario_index/chiusura_scheda/{{d.id}}">chiudi</a>
								</td>
							</tr>
						</table>
					{% endfor %}
				</div>
			{% endif %}

			{% if testoAttiva1 != '' %}
				<h3>{{testoAttiva1}}<br></h3>
				<h3>Schede con valutazioni professionali mancanti:<br></h3>
				<div style="overflow-x: auto; padding: 10px">
					{% for d in descrizioneValutazioneProfessionale %}
						<br>
						<table class='tabella'>
							<tr>
								<th>Nome Progetto</th>
								<td data-title='Nome Progetto'>{{d.nome_progetto}}</td>
							</tr>
							<tr>
								<th>Data Inizio</th>
								<td data-title='Data Inizio'>{{d.data_inizio}}</td>
							</tr>
							<tr>
								<th>Data Fine</th>
								<td data-title='Data Fine'>{{d.data_fine}}</td>
							</tr>
							<tr>
								<th>Assistito</th>
								<td data-title='Assistito'>{{ d.assistito}}</td>
							</tr>
							<tr>
								<th>Valutazioni Mancanti</th>
								<td data-title='Valutazioni Mancante'>{{d.valore}}</td>
							</tr>
							<tr>
								<th>Compila Valutazione Professionale</th>
								<td data-title='Compila Valutazione Professionale'>
									<a href="{{url}}/valutazione_figura_professionale/app_scadenzario_index/new?id_pai={{d.id}}">compila</a>
								</td>
							</tr>

						</table>
					{% endfor %}
				</div>
			{% endif %}
			<div class="pb-2 mb-4"></div>
			<h3>
				<a href="{{url}}/scheda_pai">Vai all'elenco schede</a>
			</h3>
			<div class="pb-2 mb-4"></div>
		</div>

		{% block foot %}

			<footer class="blog-footer">
				<div class="left">
					<br>
					Module Manager Ã¨ un servizio di Metarete Srl<br>
					<a href="" style="color:white;">Privacy</a>
					<a href="" style="color:white;">Cookie</a>
					<a href="" style="color:white;">About</a>
				</div>
				<div class="right">
					<figure class="figure">
						<img src="data:image/png;base64, {{image64}}" height="80px;">
					</figure>
				</div>
			</footer>

		{% endblock %}
	</body>
</html>
