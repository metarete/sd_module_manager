<html>
	<head>
		<style>
			body {
				background-color: grey;
				padding: 50px 200px;
			}
			div {
				border: 1px solid black;
				background-color: white;
				border-radius: 25px;

			}
			h1,
			h4,
			h3 {
				color: black;
				text-align: center;
			}
			#tabella {
				font-family: Arial, Helvetica, sans-serif;
				border-collapse: collapse;
				width: 70%;
				margin-left: 15%;
				margin-right: 15%;
			}

			#tabella td,
			#tabella th {
				border: 1px solid #ddd;
				padding: 8px;
			}

			#tabella tr:nth-child(even) {
				background-color: #f2f2f2;
			}

			#tabella tr:hover {
				background-color: #ddd;
			}

			#tabella th {
				padding: 12px 50px;
				text-align: left;
				background-color: #04AA6D;
				color: white;
			}
		</style>
	</head>
	<body>
		<div>
			<h1>Module Manager</h1>
			{% if testoApprovata1 != '' %}
				<h3>{{testoApprovata1}}<br></h3>
				<h3>Schede Pai da approvare:
					<br></h3>
				<table id='tabella'>
					<tr>
						<th>Data Inizio</th>
						<th>Data Fine</th>
						<th>Assistito</th>
						<th>Stato</th>
						<th>Link</th>
					</tr>
					{% for d in descrizioneSchedeApprovate %}
						<tr>
							<td data-title='Data Inizio'>{{d.data_inizio}}</td>
							<td data-title='Data Fine'>{{d.data_fine}}</td>
							<td data-title='Assistito'>{{ d.assistito}}</td>
							<td data-title='Stato'>{{ d.stato}}</td>
							<td data-title='Link'>
								<a href={{d.link}}>link</a>
							</td>
						</tr>
					{% endfor %}
				</table>
			{% endif %}

			{% if testoRitardi1 != '' %}
				<h3>{{testoRitardi1}}<br></h3>
				<h4>{{descrizioneRitardi}}<br></h4>
			{% endif %}

			{% if testoChiusura1 != '' %}
				<h3>{{testoChiusura1}}<br></h3>
				<h3>{{descrizioneSchedeDaChiudere}}<br></h3>
			{% endif %}

			{% if testoAttiva1 != '' %}
				<h3>{{testoAttiva1}}<br></h3>
				<h3>Schede con valutazioni professionali mancanti:
					<br></h3>
				<table id='tabella'>
					<tr>
						<th>Data Inizio</th>
						<th>Data Fine</th>
						<th>Assistito</th>
						<th>Valutazioni Mancanti</th>
					</tr>
					{% for d in descrizioneValutazioneProfessionale %}
						<tr>
							<td data-title='Data Inizio'>{{d.data_inizio}}</td>
							<td data-title='Data Fine'>{{d.data_fine}}</td>
							<td data-title='Assistito'>{{ d.assistito}}</td>
							<td data-title='Valutazioni Mancante'>{{d.valore}}</td>
						</tr>
					{% endfor %}
				</table>
			{% endif %}
		</div>
		
		{% block foot %}


			<h6 class="text-light">Contatti e descrizione</h6>


		{% endblock %}
	</body>
</html></div></body></html>
