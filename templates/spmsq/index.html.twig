{% extends 'base.html.twig' %}

{% block title %}ElencoSPMSQ{% endblock %}

{% block body %}
    <h1>Valutazione Cognitiva:SPMSQ </h1>

<div class="no-more-tables">
    <table class="col-sm-12  table-striped table-condensed cf">
        <thead class="cf">
        <thead>
            <tr>
                <th>Id</th>
                <th>Data di valutazione</th>
                <th>Assistito</th>
                <th>Operatore</th>
                <th>Totale</th>
                <th>Operazioni</th>
            </tr>
        </thead>
        <tbody>
        {% for s_p_m_s_q in s_p_m_s_qs %}
            <tr>
                <td data-title='Id'>{{ s_p_m_s_q.id }}</td>
                <td data-title='Data di valutazione'>{{ s_p_m_s_q.dataValutazione ? s_p_m_s_q.dataValutazione|date('Y-m-d') : '' }}</td>
                <td data-title='Assistito'>{{s_p_m_s_q.schedaPAI.nomeAssistito}} {{s_p_m_s_q.schedaPAI.cognomeAssistito}}</td>
                <td data-title= 'Operatore'>{{s_p_m_s_q.operatore.name}} {{s_p_m_s_q.operatore.surname}}<br></td>
                <td data-title='Totale'>{{ s_p_m_s_q.totale }}</td>
                <td data-title='Operazioni'>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        Apri
                        </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="{{ path('app_s_p_m_s_q_show', {'id': s_p_m_s_q.id}) }}">Visualizza</a>
                        <li><a class="dropdown-item" href="{{ path('app_s_p_m_s_q_edit', {'id': s_p_m_s_q.id}) }}">Modifica</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">Nessuna scheda disponibile</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

<a href="{{ path('app_elenco_schede') }}" type="button" class="btn btn-secondary">
	<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewbox="0 0 16 16">
		<path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
	</svg>
	Torna indietro</a> 
    
<nav aria-label="Page navigation example">
   <ul class="pagination justify-content-center">
       <li class="page-item"><a class="page-link {% if pagina==1 %}disabled{% endif %}" href="{{ path('app_s_p_m_s_q_index') }}"><<</a></li>
        <li class="page-item"><a class="page-link {% if pagina==1 %}disabled{% endif %}" href="{{ path('app_s_p_m_s_q_index', {'page':pagina-1}) }}"><</a></li>
    {% for i in 1..pagine_totali %}
        {% if i <= pagina + 1 and i >= pagina - 1 %}
            <li class="page-item"><a class="page-link" href="{{ path('app_s_p_m_s_q_index', {'page':i}) }}">{{i}}</a></li>
        {% endif %}
    {% endfor %}
    <li class="page-item"><a class="page-link {% if pagina==pagine_totali %}disabled{% endif %}" href="{{ path('app_s_p_m_s_q_index', {'page':pagina+1}) }}">></a></li>
      <li class="page-item"><a class="page-link {% if pagina==pagine_totali %}disabled{% endif %}" href="{{ path('app_s_p_m_s_q_index', {'page':pagine_totali}) }}">>></a></li>
  </ul>
</nav>
{% endblock %}
