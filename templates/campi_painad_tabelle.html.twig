{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
	<style>
		body {
			margin: 0;
		}
		.card {
			padding: 0;
			text-align: left;
		}
		.card-text {
			border-bottom-style: solid;

		}
		.card-title {
			border-bottom-style: solid;
			padding-bottom: 8px
		}
	</style>
{% endblock %}
<div class="visualizzazione-desktop">
	<div class="container-fluid text-center">
		<div class="row">
			<div class="card">
				<div class="card-body">
					<div class="row">
						<table id="tabella-index-scale-scheda-pai" class="col-sm-12  table-striped table-condensed cf">
							<thead class="cf"></thead>
							<thead>
								<tr>
									<td></td>
									{% for painad in painads %}
										<th data-title='Data Valutazione'>{{painad.dataValutazione ? painad.dataValutazione|date('d/m/Y') : ''}}</th>
									{% endfor %}
								</tr>
							</thead>
							<tbody>
								<tr>
									<th>Respiro</th>
									{% for painad in painads %}
										<td>{{painad.respiro}}</td>
									{% endfor %}
								</tr>
								<tr>
									<th>Vocalizzazione</th>
									{% for painad in painads %}
										<td>{{painad.vocalizzazione}}</td>
									{% endfor %}
								</tr>
								<tr>
									<th>Espressione facciale</th>
									{% for painad in painads %}
										<td>{{painad.espressioneFacciale}}</td>
									{% endfor %}
								</tr>
								<tr>
									<th>Linguaggio del corpo</th>
									{% for painad in painads %}
										<td>{{painad.linguaggioDelCorpo}}</td>
									{% endfor %}
								</tr>
								<tr>
									<th>Consolabilità</th>
									{% for painad in painads %}
										<td>{{painad.consolabilita}}</td>
									{% endfor %}
								</tr>
								<tr>
									<th>Totale</th>
									{% for painad in painads %}
										<td><strong>{{painad.totale}}</td>
									{% endfor %}
								</tr>
								<tr>
									<th></th>
									{% for painad in painads %}
										<td><br></td>
									{% endfor %}
								</tr>
								<tr>
									<th>Operatore</th>
									{% for painad in painads %}
										<td>{{ painad.operatore.name }}
											{{painad.operatore.surname}}</td>
									{% endfor %}
								</tr>
								<tr>
									<th></th>
									{% for painad in painads %}
										<td>
											<p class="card-title" id="totale" style="border-bottom-style: none;">
												<div class="btn-group" role="group">
													<button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
														Apri
													</button>
													<ul class="dropdown-menu">
														<li>
															<a class="dropdown-item" href="{{ path('app_painad_edit', {'id': painad.id}) }}">
																<i class="bi bi-pencil-square"></i>
																Modifica</a>
														</li>
														<li>
															<a class="dropdown-item" href="{{ path('app_painad_delete', {'id': painad.id, '_token': csrf_token('delete' ~ painad.id)}) }}" onclick="return confirm('Sei sicuro di voler cancellare questa scheda?');">
																<i class="bi bi-trash3"></i>Cancella</a>
														</li>
													</ul>
												</div>
											</p>
										</td>
									{% endfor %}
								</tr>
                            </tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
