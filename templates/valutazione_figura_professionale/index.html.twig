{% extends 'base.html.twig' %}

{% block title %}ElencoValutazioneFiguraProfessionale{% endblock %}

{% block body %}
    <h1>Valutazione Figura Professionale</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Tipo operatore</th>
                <th>Diagnosi Professionale</th>
                <th>Obbiettivi da raggiungere</th>
                <th>Tipo e frequenza</th>
                <th>Modalità e tempi di monitoraggio degli obbiettivi</th>
                <th>Data di valutazione</th>
                <th>Operazioni</th>
            </tr>
        </thead>
        <tbody>
        {% for valutazione_figura_professionale in valutazione_figura_professionales %}
            <tr>
                <td>{{ valutazione_figura_professionale.id }}</td>
                <td>{{ valutazione_figura_professionale.nome }}</td>
                <td>{{ valutazione_figura_professionale.tipoOperatore }}</td>
                <td>{{ valutazione_figura_professionale.diagnosiProfessionale }}</td>
                <td>{{ valutazione_figura_professionale.obbiettiviDaRaggiungere }}</td>
                <td>{{ valutazione_figura_professionale.tipoEFrequenza }}</td>
                <td>{{ valutazione_figura_professionale.modalitaTempiMonitoraggio }}</td>
                <td>{{ valutazione_figura_professionale.dataValutazione ? valutazione_figura_professionale.dataValutazione|date('Y-m-d') : '' }}</td>
                <td>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        Apri
                        </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="{{ path('app_valutazione_figura_professionale_show', {'id': valutazione_figura_professionale.id}) }}">Visualizza</a>
                        <li><a class="dropdown-item" href="{{ path('app_valutazione_figura_professionale_edit', {'id': valutazione_figura_professionale.id}) }}">Modifica</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Nessuna scheda disponibile</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
    <a class="btn btn-warning" href="{{ path('app_homepage') }}">Menù Principale</a>

<nav aria-label="Page navigation example">
   <ul class="pagination justify-content-center">
       <li class="page-item"><a class="page-link {% if pagina==1 %}disabled{% endif %}" href="{{ path('app_valutazione_figura_professionale_index') }}"><<</a></li>
        <li class="page-item"><a class="page-link {% if pagina==1 %}disabled{% endif %}" href="{{ path('app_valutazione_figura_professionale_index', {'page':pagina-1}) }}"><</a></li>
    {% for i in 1..pagine_totali %}
        {% if i <= pagina + 1 and i >= pagina - 1 %}
            <li class="page-item"><a class="page-link" href="{{ path('app_valutazione_figura_professionale_index', {'page':i}) }}">{{i}}</a></li>
        {% endif %}
    {% endfor %}
    <li class="page-item"><a class="page-link {% if pagina==pagine_totali %}disabled{% endif %}" href="{{ path('app_valutazione_figura_professionale_index', {'page':pagina+1}) }}">></a></li>
      <li class="page-item"><a class="page-link {% if pagina==pagine_totali %}disabled{% endif %}" href="{{ path('app_valutazione_figura_professionale_index', {'page':pagine_totali}) }}">>></a></li>
  </ul>
</nav>
{% endblock %}
